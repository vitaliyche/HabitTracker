<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codeliner.habittracker">
    <uses-permission android:name="android.permission.INTERNET"/> <!-- для рекламы даем доступ на интернет -->

    <application
        android:name=".activities.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitTrackerBlue">
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.HabitActivity"
            android:exported="false" /> <!-- 22 adjustResize - чтобы клавиатура не обрезала экран, и делаем отдельную тему для NewNote -->
        <activity
            android:name=".activities.NewNoteActivity"
            android:exported="true"
            android:theme="@style/Theme.NewNoteBlue"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

            <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 тестовый идентификатор -->
            <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>

</manifest>